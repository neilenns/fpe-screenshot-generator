{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Python HTTP server",
      "type": "shell",
      "command": "python",
      "args": ["-m", "http.server", "8000"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Serving HTTP on",
          "endsPattern": "Serving HTTP on"
        }
      },
      "group": "build"
    }
  ]
}
